{
  "Name": "Calendar Permissions",
  "Content": {
    "Get calendar permissions": {
      "id": "calendar_get_permission",
      "title": "Get calendar permission",
      "baseCommand": "Get-MailboxFolderPermission",
      "description": "Returns list of identities accessing the calendar",
      "parameters": [
        {
          "name": "identity",
          "label": "Target calendar",
          "type": "text",
          "placeholder": "calendar@domain.com",
          "required": true,
          "flag": "-Identity",
          "template": "{value}:\\calendar"
        }
      ]
    },
    "Add calendar permissions": {
      "id": "calendar_add_permission",
      "title": "Add calendar permission",
      "baseCommand": "Add-MailboxFolderPermission",
      "description": "Adds permissions to a calendar",
      "parameters": [
        {
          "name": "identity",
          "label": "Target calendar",
          "type": "text",
          "placeholder": "calendar@domain.com",
          "required": true,
          "flag": "-Identity",
          "template": "{value}:\\calendar"
        },
        {
          "name": "user",
          "label": "User email",
          "type": "email",
          "placeholder": "user@domain.com",
          "required": true,
          "flag": "-User"
        },
        {
          "name": "accessRights",
          "label": "Access rights",
          "type": "select",
          "required": true,
          "flag": "-AccessRights",
          "options": [
            "None",
            "Reviewer",
            "Author",
            "Contributor",
            "Editor",
            "NonEditingAuthor",
            "PublishingEditor",
            "PublishingAuthor",
            "Owner"
          ]
        }
      ]
    },
    "Set calendar prmissions": {
      "id": "calendar_set_permission",
      "title": "Set calendar permission",
      "baseCommand": "Set-MailboxFolderPermission",
      "description": "Changes existing user's permissions to a calendar",
      "parameters": [
        {
          "name": "identity",
          "label": "Target calendar",
          "type": "text",
          "placeholder": "calendar@domain.com",
          "required": true,
          "flag": "-Identity",
          "template": "{value}:\\calendar"
        },
        {
          "name": "user",
          "label": "User email",
          "type": "email",
          "placeholder": "user@domain.com",
          "required": true,
          "flag": "-User"
        },
        {
          "name": "accessRights",
          "label": "Access rights",
          "type": "select",
          "required": true,
          "flag": "-AccessRights",
          "options": [
            "None",
            "Reviewer",
            "Author",
            "Contributor",
            "Editor",
            "NonEditingAuthor",
            "PublishingEditor",
            "PublishingAuthor",
            "Owner"
          ]
        }
      ]
    },
    "Remove calendar permissions": {
      "id": "calendar_remove_permission",
      "title": "Remove calendar permission",
      "baseCommand": "Remove-MailboxFolderPermission",
      "description": "Removes user's permissions from a calendar",
      "parameters": [
        {
          "name": "identity",
          "label": "Target calendar",
          "type": "text",
          "placeholder": "calendar@domain.com",
          "required": true,
          "flag": "-Identity",
          "template": "{value}:\\calendar"
        },
        {
          "name": "user",
          "label": "User email",
          "type": "email",
          "placeholder": "user@domain.com",
          "required": true,
          "flag": "-User"
        }
      ]
    }
  }
}
