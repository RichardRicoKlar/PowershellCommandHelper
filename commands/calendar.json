{
  "Name": "Calendar Permissions",
  "Content": {
    "Add calendar permissions": {
      "id": "calendar_add_permission",
      "title": "Add calendar permission",
      "baseCommand": "Add-MailboxFolderPermission",
      "description": "Adds permissions to a user's calendar",
      "parameters": [
        {
          "name": "identity",
          "label": "Target calendar",
          "type": "text",
          "placeholder": "user@domain.com",
          "required": true,
          "flag": "-Identity",
          "template": "{value}:\\calendar"
        },
        {
          "name": "user",
          "label": "User email",
          "type": "email",
          "placeholder": "target@domain.com",
          "required": true,
          "flag": "-User"
        },
        {
          "name": "accessRights",
          "label": "Access rights",
          "type": "select",
          "required": true,
          "flag": "-AccessRights",
          "options": [
            "Reviewer",
            "Editor",
            "Owner"
          ]
        }
      ]
    },
    "Remove calendar permissions": {
      "id": "calendar_remove_permission",
      "title": "Remove calendar permission",
      "baseCommand": "Remove-MailboxFolderPermission",
      "description": "Removes permissions from a user's calendar",
      "parameters": [
        {
          "name": "identity",
          "label": "Target calendar",
          "type": "text",
          "placeholder": "user@domain.com",
          "required": true,
          "flag": "-Identity",
          "template": "{value}:\\calendar"
        },
        {
          "name": "user",
          "label": "User email",
          "type": "email",
          "placeholder": "target@domain.com",
          "required": true,
          "flag": "-User"
        }
      ]
    }
  }
}
